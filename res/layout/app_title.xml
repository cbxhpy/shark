<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark" >
            
    <TextView
                android:id="@+id/book_title_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_below="@id/book_title_app" />

            <ImageButton
                android:id="@+id/add_book_item"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/add_book" />
            
             <ImageButton
                android:id="@+id/search_book_item"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@id/add_book_item"
                android:background="@android:color/transparent"
                android:src="@drawable/search_book" />
    

</RelativeLayout>
